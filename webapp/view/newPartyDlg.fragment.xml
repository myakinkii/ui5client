<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog title="{i18n>partyCreateDialogTitle}" >
		<content>
			<List>
				<InputListItem label="{i18n>partyRPGMode}"> <Switch state="{/rpg}" type="AcceptReject"/> </InputListItem>								
				<InputListItem label="{i18n>partyOnlineMode}"> <Switch enabled="{/iAmOnline}" state="{/online}" type="AcceptReject"/> </InputListItem>
				<InputListItem label="{i18n>partyGameMode}">
					<SegmentedButton enabled="{/iAmOnline}" selectedKey="{/mode}">
						<items>
							<SegmentedButtonItem text="{i18n>modeSolo}" key="solo" />
							<SegmentedButtonItem text="{i18n>modeCoop}" key="coop" />
							<SegmentedButtonItem text="{i18n>modeVersus}" key="versus" />
						</items>
					</SegmentedButton>
				</InputListItem>
				<InputListItem label="{i18n>partyBoardSize}">
					<SegmentedButton selectedKey="{/bSize}">
						<items>
							<SegmentedButtonItem text="{i18n>sizeSmall}" key="s" />
							<SegmentedButtonItem text="{i18n>sizeMedium}" key="m" />
							<SegmentedButtonItem text="{i18n>sizeBig}" key="b" />
						</items>
					</SegmentedButton>
				</InputListItem>				
				<InputListItem label="{i18n>partyMaxPlayers}">
					<SegmentedButton enabled="{= ${/mode}!=='solo' }" selectedKey="{/maxPlayers}">
						<items>
							<SegmentedButtonItem text="2" key="2" />
							<SegmentedButtonItem text="3" key="3" />
							<SegmentedButtonItem text="4" key="4" />
						</items>
					</SegmentedButton>
				</InputListItem>
			</List>
        </content>
        <beginButton>
            <Button text="{i18n>partyCreate}" press="handleCreateParty" />
        </beginButton>        
        <endButton>
            <Button text="{i18n>genericCancel}" press="closeDlg" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>