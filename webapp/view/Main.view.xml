<mvc:View 
	controllerName="com.minesnf.ui5client.controller.Main" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns="sap.m"
	displayBlock="true">
	<u:Shell showPane="{/showPane}">
		<u:headItems>
			<!--<u:ShellHeadItem icon="sap-icon://menu2" toggleEnabled="true" selected="{/showPane}" press="handleShowPane" />-->
			<u:ShellHeadItem visible="{= !${/gameStarted} }" icon="{parts: [{path:'/page'}],formatter:'.formatPageIcon'}" press="switchPage" />
			<u:ShellHeadItem visible="{/gameStarted}" icon="sap-icon://decline"  press="handleQuitGame" />
			<u:ShellHeadItem visible="{= ${device>/system/desktop} &amp;&amp; ${/gameStarted} }" icon="sap-icon://move"  toggleEnabled="true"  selected="{/altKeyMode}"  press="handleAltToggle" />
		</u:headItems>		
		<u:headEndItems>
			<u:ShellHeadItem toggleEnabled="true" selected="{/forceOfflineMode}" 
				icon="{parts: [{path:'/offlineMode'}],formatter:'.formatModeIcon'}" visible="{/showOfflineButton}" press="switchMode" />
			<u:ShellHeadItem icon="sap-icon://log" visible="false" _visible="{= ${/auth/type}!=='temp' }" press="handleLogOff" />
		</u:headEndItems>
		<u:user>
			<u:ShellHeadUserItem  image="sap-icon://person-placeholder"  username="[{/auth/profile/level}] {/auth/user}"  showPopupIndicator="false" press="handleShowAuthDlg" />
		</u:user>
		<!--<u:paneContent>-->
		<!--	<core:Fragment fragmentName="com.minesnf.ui5client.view.Inventory" type="XML" />-->
		<!--</u:paneContent>-->
		
		<NavContainer id="app">
			<pages>
				<Page id="game" showHeader="false" ><core:Fragment fragmentName="com.minesnf.ui5client.view.Main" type="XML" /></Page>
				<Page id="board" showHeader="false" />
				<Page id="battle" showHeader="false" ><core:Fragment fragmentName="com.minesnf.ui5client.view.Battle" type="XML" /></Page>
				<Page id="inv" showHeader="false" ><core:Fragment fragmentName="com.minesnf.ui5client.view.Inventory" type="XML" /></Page>
			</pages>
		</NavContainer>
		
		<!--< class="sapUiContentPadding" height="100%" id="crsl">-->
		<!--	<pages>-->
		<!--		<core:Fragment fragmentName="com.minesnf.ui5client.view.Main" type="XML" />-->
		<!--		<core:Fragment fragmentName="com.minesnf.ui5client.view.Inventory" type="XML" />-->
		<!--		<core:Fragment fragmentName="com.minesnf.ui5client.view.Chat" type="XML" />-->
		<!--		<core:Fragment fragmentName="com.minesnf.ui5client.view.Parties" type="XML" />-->
		<!--		<core:Fragment fragmentName="com.minesnf.ui5client.view.Users" type="XML" />-->
		<!--	</pages>-->
		<!--</>-->
		
	</u:Shell>
</mvc:View>
