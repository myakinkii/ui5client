<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
		<!--<FlexBox justifyContent="Center">-->
			<!--<items>-->
				<!--<l:VerticalLayout width="100%"> -->
					<IconTabBar id="gameTabBar" expandable="false" items="{/battleInfo}">
						<items>
							<IconTabFilter text="{name}" key="{name}" count="{ parts:[{path:'hp'},{path:'state'}],formatter:'.handleFormatBattleState'}" _count="{hp}" _esign="Horizontal"
								iconColor="{parts:[{path:'hp'},{path:'name'},{path:'/auth/user'},{path:'mob'}],formatter:'.handleFormatBattleIconColor'}"
								icon="{= ${mob}?'sap-icon://sap-ui5':'sap-icon://employee' }">
								<ObjectListItem 
									number="{hp}" numberUnit="{i18n>hp}" numberState="{= ${hp}&gt;3?'Success':${hp}&gt;0?'Warning':'None' }"
									title="{i18n>patk}: +{patk} {i18n>pdef}: +{pdef} &#10;&#13; {i18n>maxhp}: +{maxhp} {i18n>speed}: +{speed}"
									intro="[{level}] {name}" >
								</ObjectListItem>
								<Toolbar content="{spells}">
									<Button text="{spellName} +{eft}" press="handleCastSpell" />
								</Toolbar>
							</IconTabFilter>
						</items>
					</IconTabBar>
					<Toolbar _visible="{= ${/gameInfo/mode}==='versusRPG' }">
						<ToolbarSpacer />
						<Button press="handleHitTarget" text="{i18n>gameHitTarget} (!)" enabled="{/canHit}" type="Reject" />
						<ToolbarSpacer />						
						<Button press="handleAssistAttack" text="{i18n>gameAssist} (+)" _enabled="{/canFlee}" _type="Emphasized" />
						<ToolbarSpacer />
						<Button press="handleDefendTarget" text="{i18n>gameDefend} (^)" _enabled="{/canFlee}" _type="Emphasized" />
						<ToolbarSpacer />
					</Toolbar>						
					<Toolbar visible="{= ${/gameInfo/mode}!=='versusRPG' }">
						<ToolbarSpacer />
						<Button press="handleStealLoot" text="{i18n>gameStealLoot}" enabled="{/canSteal}" _type="Emphasized" />
						<ToolbarSpacer />
						<Button press="handleHitMob" text="{i18n>gameHitMob}" enabled="{/canHit}" type="Reject" />
						<ToolbarSpacer />
						<Button press="handleFleeBattle" text="{i18n>gameVoteFlee}" enabled="{/canFlee}" _type="Accept" />
						<ToolbarSpacer />
					</Toolbar>
					<Toolbar visible="{= ${/gameInfo/mode}==='versusRPG' }">
						<ToolbarSpacer />
						<Button press="handleSetStateParry" text="{i18n>gameParry} (/)" _enabled="{/canSteal}" type="Emphasized" />
						<ToolbarSpacer />
						<Button press="handleSetStateEvade" text="{i18n>gameEvade} (~)" _enabled="{/canFlee}" type="Emphasized" />
						<ToolbarSpacer />
						<Button press="handleCancelAction" text="{i18n>gameCancel}" _enabled="{/canFlee}" _type="Emphasized" />
						<ToolbarSpacer />
					</Toolbar>									
					<List id="battleLog" width="100%" />
					<!--<List width="100%" items="{/battleLog}" >-->
					<!--	<NotificationListItem buttons="{actions}"-->
					<!--		showCloseButton="false" priority="{priority}" type="Inactive"-->
					<!--		title="{entryNumber}: {title}" description="{descr}"-->
					<!--		authorName="{attack}" datetime="{defense}"-->
					<!--		authorPicture="{parts:[{path:'eventKey'}],formatter:'.handleFormatBattleLogIcon'}">-->
					<!--		<buttons>-->
					<!--			<Button text="{action}" press="handleBattleActionCb" />-->
					<!--		</buttons>-->
					<!--	</NotificationListItem>-->
					<!--</List>-->
				<!--</l:VerticalLayout>-->
			<!--</items>-->
		<!--</FlexBox>-->
	</ScrollContainer>	
</core:FragmentDefinition>	