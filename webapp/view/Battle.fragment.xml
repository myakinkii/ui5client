<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
		<FlexBox justifyContent="Center">
			<items>
				<l:VerticalLayout width="100%"> 
					<l:Grid defaultSpan="L6 M6 S6" class="sapUiSmallMarginTop" content="{/battleInfo}">
							<ObjectListItem 
								title="{i18n>hp}: {hp} (+{maxhp})" 
								intro="[{level}] {name}" 
								icon="{= ${mob}?'sap-icon://sap-ui5':'sap-icon://employee' }" >
								<attributes>
									<ObjectAttribute text="{i18n>patk} +{patk} {i18n>pdef} +{pdef}" />
									<ObjectAttribute text="{i18n>speed} +{speed}" />
								</attributes>				
							</ObjectListItem>
					</l:Grid>
					<Button width="100%" press="handleHitMob" text="{i18n>gameHitMob}" type="Reject" />
					<List id="battleLog" width="100%" />
					<!--<List width="100%" items="{path:'/log', sorter:{path:'sorter',descending:true} }" >-->
					<!--	<NotificationListItem -->
					<!--		showCloseButton="false" priority="{priority}" type="Inactive"-->
					<!--		title="{title}" description="{descr}"-->
					<!--		authorName="{attack}" datetime="{defense}"-->
					<!--		authorPicture="{parts:[{path:'eventKey'}],formatter:'.handleFormatBattleLogIcon'}" />-->
					<!--</List>	-->
				</l:VerticalLayout>
			</items>
		</FlexBox>
	</ScrollContainer>	
</core:FragmentDefinition>	