<mvc:View 
	controllerName="com.minesnf.ui5client.controller.View1" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns="sap.m"
	displayBlock="true">
	<!-- <App id="idAppControl">
		<pages>	 -->
		<u:Shell>
			<u:headEndItems>
				<u:ShellHeadItem
					icon="sap-icon://log"
					tooltip="Logoff"
					visible="{= ${/auth/type}!=='temp' }"
					press="logOff" />
			</u:headEndItems>
			<u:user>
				<u:ShellHeadUserItem 
					image="sap-icon://person-placeholder" 
					username="[{/auth/profile/level}] {/auth/user}" 
					showPopupIndicator="false"
					press="showAuthDlg" />
			</u:user>

			<Carousel class="sapUiContentPadding" height="100%">
				<pages>

					<l:VerticalLayout width="100%" height="100%"> 
						<FlexBox height="600px" alignItems="Center" justifyContent="Center">
							<items>
								<l:VerticalLayout width="100%" height="100%"> 
									<Button width="100%" text="{i18n>startRankSmall}" type="Emphasized" press="startRank">
										<customData> <core:CustomData key="boardSize" value="s" /> </customData>
									</Button>
									<Button width="100%" text="{i18n>startRankMedium}" type="Reject" press="startRank">
										<customData> <core:CustomData key="boardSize" value="m" /> </customData>
									</Button>
									<Button width="100%" text="{i18n>startRankBig}" type="Accept" press="startRank">
										<customData> <core:CustomData key="boardSize" value="b" /> </customData>
									</Button>
								</l:VerticalLayout>
							</items>
						</FlexBox>
					</l:VerticalLayout>

					<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">				
					<l:VerticalLayout width="100%"> 
						<Toolbar>
							<Input id="input" value="{/msg}" />
							<Button text="{i18n>sendMsg}" press="sendMsg" />
						</Toolbar>
						<List items="{ path:'/evts', sorter:{path:'ts',descending:true} }">
							<ObjectListItem title="{func}">
								<attributes>
									<ObjectAttribute text="{dst}" />
									<ObjectAttribute text="{contextId}" />
									<ObjectAttribute text="{usr}" />
									<ObjectAttribute text="{partyId}" />
									<ObjectAttribute text="{argTxt}" />
									</attributes>
							</ObjectListItem>
						</List>
					</l:VerticalLayout>
					</ScrollContainer>

					<l:VerticalLayout width="100%"> 
						<Toolbar>
							<ToolbarSpacer />
							<Title text="{i18n>userTitle}" />
							<ToolbarSpacer />
						</Toolbar>					
						<List items="{ path:'/players'}">
							<ObjectListItem title="{name}">
								<attributes>
									<ObjectAttribute text="{i18n>userLevel}: {level}" />
									<ObjectAttribute text="{i18n>userState}: {state}" />
									</attributes>
							</ObjectListItem>
						</List>
					</l:VerticalLayout>

					<l:VerticalLayout width="100%">
						<Toolbar>
							<ToolbarSpacer />
							<Title text="{i18n>partyTitle}" />
							<ToolbarSpacer />
						</Toolbar>						
						<List items="{ path:'/parties'}">
							<ObjectListItem title="{name}">
								<attributes>
									<ObjectAttribute text="{i18n>partyLeader}: {leader}" />
									<ObjectAttribute text="{i18n>partyMode}: {mode}" />
									<ObjectAttribute text="{i18n>partyMaxPlayers}: {maxPlayers}" />
									<ObjectAttribute text="{i18n>partyLevels}: {minLevel} - {maxLevel}" />
								</attributes>
							</ObjectListItem>
						</List>
					</l:VerticalLayout>

				</pages>
			</Carousel>
		
		</u:Shell>
		<!-- </pages>
	</App> -->
</mvc:View>
